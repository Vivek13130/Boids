code = "shader_type canvas_item;

uniform float trail_strength = 0.98; // Lower = longer-lasting trails
uniform float blur_amount = 0.02;    // Controls diffusion

void fragment() {
    vec4 old_trail = texture(TEXTURE, UV);
    
    // Diffuse the trail slightly
    vec4 blurred = (texture(TEXTURE, UV + vec2(blur_amount, 0.0)) +
                    texture(TEXTURE, UV + vec2(-blur_amount, 0.0)) +
                    texture(TEXTURE, UV + vec2(0.0, blur_amount)) +
                    texture(TEXTURE, UV + vec2(0.0, -blur_amount))) * 0.25;
    
    // Fade trails over time
    vec4 faded_trail = mix(old_trail, blurred, 0.5) * trail_strength;
    
    COLOR = faded_trail;
}
"

